<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:layout_marginBottom">@dimen/padding_16</item>
    </style>

    <style name="field_start">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

    <style name="field_end">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

    <style name="field_weight_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
    </style>

    <style name="submit_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:layout_gravity">right</item>
    </style>



</resources>
