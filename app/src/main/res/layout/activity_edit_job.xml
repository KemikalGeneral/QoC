<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_job_page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.endorphinapps.kemikal.queenofclean.EditRecords.EditJob">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Customer Section-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/customer_container"
            style="@style/containerPink"
            android:padding="0dp"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Customer-->
            <Spinner
                android:id="@+id/customer_spinner"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:padding="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Person Icon-->
            <ImageView
                android:id="@+id/customer_spinner_icon"
                style="@style/detail_icon"
                android:background="@drawable/ic_person"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/customer_spinner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/customer_spinner" />

            <!--One-off Customer Name-->
            <TextView
                android:id="@+id/full_name_customer"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Person Icon-->
            <ImageView
                android:id="@+id/full_name_customer_icon"
                style="@style/detail_icon"
                android:background="@drawable/ic_person"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/full_name_customer"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/full_name_customer" />

            <!--One-off Customer Home Number-->
            <TextView
                android:id="@+id/one_off_home_number"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:text="Home Number:"
                app:layout_constraintLeft_toLeftOf="@id/full_name_customer"
                app:layout_constraintTop_toBottomOf="@id/full_name_customer" />

            <!--Home Phone Icon-->
            <ImageView
                android:id="@+id/one_off_home_number_icon"
                style="@style/detail_icon"
                android:background="@drawable/ic_phone_home"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/one_off_home_number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/one_off_home_number" />

            <!--One-off Customer Mobile Number-->
            <TextView
                android:id="@+id/one_off_mobile_number"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:text="Mobile Number:"
                app:layout_constraintLeft_toLeftOf="@id/full_name_customer"
                app:layout_constraintTop_toBottomOf="@id/one_off_home_number" />

            <!--Mobile Phone Icon-->
            <ImageView
                android:id="@+id/one_off_mobile_number_icon"
                style="@style/detail_icon"
                android:background="@drawable/ic_phone_mobile"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/one_off_mobile_number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/one_off_mobile_number" />
        </android.support.constraint.ConstraintLayout>

        <!--Customer Address-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/customer_address_container"
            style="@style/containerPink"
            android:padding="0dp"
            android:paddingStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customer_container">

            <TextView
                android:id="@+id/address_line_1"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:text="@string/address_line_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Address Icon-->
            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_address"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/address_line_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/address_line_1" />

            <TextView
                android:id="@+id/address_line_2"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:text="@string/address_line_2"
                app:layout_constraintLeft_toLeftOf="@id/address_line_1"
                app:layout_constraintTop_toBottomOf="@id/address_line_1" />

            <TextView
                android:id="@+id/address_town"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:text="@string/town"
                app:layout_constraintLeft_toLeftOf="@id/address_line_1"
                app:layout_constraintTop_toBottomOf="@id/address_line_2" />

            <TextView
                android:id="@+id/address_city"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:text="@string/city"
                app:layout_constraintLeft_toLeftOf="@id/address_line_1"
                app:layout_constraintTop_toBottomOf="@id/address_town" />

            <TextView
                android:id="@+id/address_postcode"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:text="@string/postcode"
                app:layout_constraintLeft_toLeftOf="@id/address_line_1"
                app:layout_constraintTop_toBottomOf="@id/address_city" />
        </android.support.constraint.ConstraintLayout>


        <!--Employee Section-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/employee_container"
            style="@style/containerGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customer_address_container">

            <Spinner
                android:id="@+id/employee_spinner"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:padding="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_person"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@id/employee_spinner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/employee_spinner" />
        </android.support.constraint.ConstraintLayout>


        <!--Date-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/date_time_container"
            style="@style/containerPink"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/employee_container">

            <TextView
                android:id="@+id/start_date"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:text="Select a Start Date..."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_date"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/start_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/start_date" />

            <TextView
                android:id="@+id/start_time"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:text="Select a Start Time..."
                app:layout_constraintLeft_toLeftOf="@id/start_date"
                app:layout_constraintTop_toBottomOf="@id/start_date" />

            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_time"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/start_time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/start_time" />
        </android.support.constraint.ConstraintLayout>


        <!--Job & Payment Statuses-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/status_container"
            style="@style/containerGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_time_container">

            <!--Job Status-->
            <Spinner
                android:id="@+id/job_status_spinner"
                style="@style/text_field_full"
                android:padding="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Customer Payment Status-->
            <Spinner
                android:id="@+id/customer_payment_status_spinner"
                style="@style/text_field_full"
                android:padding="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/job_status_spinner" />

            <!--Employee Payment Status-->
            <Spinner
                android:id="@+id/employee_payment_status_spinner"
                style="@style/text_field_full"
                android:padding="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/customer_payment_status_spinner" />
        </android.support.constraint.ConstraintLayout>


        <!--Job Items-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/job_items_container"
            style="@style/containerPink"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status_container">

            <TextView
                android:id="@+id/job_item_row"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:hint="Add a Job Task..."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_add"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/job_item_row"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/job_item_row" />

            <LinearLayout
                android:id="@+id/job_list_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/job_item_row" />
        </android.support.constraint.ConstraintLayout>


        <!--Estimated Time-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/estimated_time_container"
            style="@style/containerGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/job_items_container">

            <TextView
                android:id="@+id/estimated_time_icon"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Length of Job in Hours:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Time Icon-->
            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_time"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@id/estimated_time_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/estimated_time_icon" />

            <EditText
                android:id="@+id/estimated_time"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:hint="00"
                android:inputType="number"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>


        <!--Total Job Price-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/total_price_container"
            style="@style/containerPink"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/estimated_time_container">

            <TextView
                android:id="@+id/money_icon"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Total Price for Job:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Money Icon-->
            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_money"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/money_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/money_icon" />

            <TextView
                android:id="@+id/total_price"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:hint="00.00"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>


        <!--Notes-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/notes_container"
            style="@style/containerGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_price_container">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/notes_wrapper"
                style="@style/text_input_wrapper"
                android:layout_marginLeft="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/notes"
                    style="@style/text_field_full"
                    android:gravity="top"
                    android:hint="Add Notes..."
                    android:inputType="textCapSentences"
                    android:lines="5" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_notes"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/notes_wrapper" />
        </android.support.constraint.ConstraintLayout>


        <!--Submit-->
        <Button
            android:id="@+id/apply_changes"
            style="@style/button"
            android:text="Apply Changes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notes_container" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
