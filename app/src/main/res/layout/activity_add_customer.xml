<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.endorphinapps.kemikal.queenofclean.AddRecords.AddCustomer">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Populate Button - For Testing-->
        <Button
            android:id="@+id/btn_populate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Populate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!--First Name-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_add_first_name"
            style="@style/text_input_wrapper"
            android:hint="First Name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_populate">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_first_name"
                style="@style/text_input"
                android:inputType="textCapWords|textPersonName" />
        </android.support.design.widget.TextInputLayout>


        <!--Last Name-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_add_last_name"
            style="@style/text_input_wrapper"
            app:layout_constraintLeft_toLeftOf="@id/wrapper_add_first_name"
            app:layout_constraintRight_toRightOf="@id/wrapper_add_first_name"
            app:layout_constraintTop_toBottomOf="@+id/wrapper_add_first_name">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_last_name"
                style="@style/text_input"
                android:hint="Last Name"
                android:inputType="textCapWords|textPersonName" />
        </android.support.design.widget.TextInputLayout>


        <!--Mobile Number-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_add_mobile_number"
            style="@style/text_input_wrapper"
            app:layout_constraintLeft_toLeftOf="@id/wrapper_add_first_name"
            app:layout_constraintRight_toRightOf="@id/wrapper_add_first_name"
            app:layout_constraintTop_toBottomOf="@+id/wrapper_add_last_name">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_mobile_number"
                style="@style/text_input"
                android:hint="Mobile Number"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>


        <!--Home Number-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_add_home_number"
            style="@style/text_input_wrapper"
            app:layout_constraintLeft_toLeftOf="@id/wrapper_add_first_name"
            app:layout_constraintRight_toRightOf="@id/wrapper_add_first_name"
            app:layout_constraintTop_toBottomOf="@+id/wrapper_add_mobile_number">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_home_number"
                style="@style/text_input"
                android:hint="Home Number"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>


        <!--eMail Address-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_add_email"
            style="@style/text_input_wrapper"
            app:layout_constraintLeft_toLeftOf="@id/wrapper_add_first_name"
            app:layout_constraintRight_toRightOf="@id/wrapper_add_first_name"
            app:layout_constraintTop_toBottomOf="@+id/wrapper_add_home_number">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_email"
                style="@style/text_input"
                android:hint="eMail Address"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>


        <!--Address Line 1-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_add_address_line_1"
            style="@style/text_input_wrapper"
            app:layout_constraintLeft_toLeftOf="@id/wrapper_add_first_name"
            app:layout_constraintRight_toRightOf="@id/wrapper_add_first_name"
            app:layout_constraintTop_toBottomOf="@+id/wrapper_add_email">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_address_line_1"
                style="@style/text_input"
                android:hint="Address Line 1"
                android:inputType="textCapWords|textPostalAddress" />
        </android.support.design.widget.TextInputLayout>


        <!--Address Line 2-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_add_address_line_2"
            style="@style/text_input_wrapper"
            app:layout_constraintLeft_toLeftOf="@id/wrapper_add_first_name"
            app:layout_constraintRight_toRightOf="@id/wrapper_add_first_name"
            app:layout_constraintTop_toBottomOf="@+id/wrapper_add_address_line_1">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_address_line_2"
                style="@style/text_input"
                android:hint="Address Line 2"
                android:inputType="textCapWords|textPostalAddress" />
        </android.support.design.widget.TextInputLayout>


        <!--Address Town-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_add_town"
            style="@style/text_input_wrapper"
            app:layout_constraintLeft_toLeftOf="@id/wrapper_add_first_name"
            app:layout_constraintRight_toRightOf="@id/wrapper_add_first_name"
            app:layout_constraintTop_toBottomOf="@+id/wrapper_add_address_line_2">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_town"
                style="@style/text_input"
                android:hint="Town"
                android:inputType="textCapWords|textPostalAddress" />
        </android.support.design.widget.TextInputLayout>


        <!--Address City-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_add_city"
            style="@style/text_input_wrapper"
            app:layout_constraintLeft_toLeftOf="@id/wrapper_add_first_name"
            app:layout_constraintRight_toRightOf="@id/wrapper_add_first_name"
            app:layout_constraintTop_toBottomOf="@+id/wrapper_add_town">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_city"
                style="@style/text_input"
                android:hint="City"
                android:inputType="textCapWords|textPostalAddress" />
        </android.support.design.widget.TextInputLayout>


        <!--Address PostCode-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_add_postcode"
            style="@style/text_input_wrapper"
            app:layout_constraintLeft_toLeftOf="@id/wrapper_add_first_name"
            app:layout_constraintRight_toRightOf="@id/wrapper_add_first_name"
            app:layout_constraintTop_toBottomOf="@+id/wrapper_add_city">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/add_postcode"
                style="@style/text_input"
                android:hint="Postcode"
                android:inputType="textCapCharacters|textPostalAddress" />
        </android.support.design.widget.TextInputLayout>


        <!--Submit Button-->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wrapper_add_postcode" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>