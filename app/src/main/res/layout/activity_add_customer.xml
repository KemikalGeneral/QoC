<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.endorphinapps.kemikal.queenofclean.AddRecords.AddCustomer">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Names-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/names_container"
            style="@style/containerPink"
            android:focusableInTouchMode="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--First Name-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/first_name_wrapper"
                style="@style/text_input_wrapper"
                android:layout_marginLeft="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:theme="@style/TextLabelPink">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/first_name"
                    style="@style/text_field_full"
                    android:hint="First Name"
                    android:inputType="textCapWords|textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <!--Person Icon-->
            <ImageView
                android:id="@+id/icon_person"
                style="@style/detail_icon"
                android:background="@drawable/ic_person"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/first_name_wrapper"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/first_name_wrapper" />

            <!--Last Name-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/last_name_wrapper"
                style="@style/text_input_wrapper"
                app:layout_constraintLeft_toLeftOf="@id/first_name_wrapper"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/first_name_wrapper"
                android:theme="@style/TextLabelPink">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/last_name"
                    style="@style/text_field_full"
                    android:hint="Last Name"
                    android:inputType="textCapWords|textPersonName" />
            </android.support.design.widget.TextInputLayout>
        </android.support.constraint.ConstraintLayout>


        <!--Contact Details-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/contact_details_container"
            style="@style/containerGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/names_container">

            <!--Home Number-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/home_number_wrapper"
                style="@style/text_input_wrapper"
                android:layout_marginLeft="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:theme="@style/TextLabelGrey">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/home_number"
                    style="@style/text_field_full"
                    android:hint="Home Number"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

            <!--Home Phone Icon-->
            <ImageView
                android:id="@+id/home_number_label"
                style="@style/detail_icon"
                android:background="@drawable/ic_phone_home"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@id/home_number_wrapper"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/home_number_wrapper" />

            <!--Mobile Number-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/mobile_number_wrapper"
                style="@style/text_input_wrapper"
                app:layout_constraintLeft_toLeftOf="@id/home_number_wrapper"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_number_wrapper"
                android:theme="@style/TextLabelGrey">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/mobile_number"
                    style="@style/text_field_full"
                    android:hint="Mobile Number"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

            <!--Mobile Phone Icon-->
            <ImageView
                android:id="@+id/mobile_number_label"
                style="@style/detail_icon"
                android:background="@drawable/ic_phone_mobile"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@id/mobile_number_wrapper"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/mobile_number_wrapper" />

            <!--eMail Address-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_wrapper"
                style="@style/text_input_wrapper"
                app:layout_constraintLeft_toLeftOf="@id/home_number_wrapper"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mobile_number_wrapper"
                android:theme="@style/TextLabelGrey">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email"
                    style="@style/text_field_full"
                    android:hint="eMail Address"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <!--eMail Icon-->
            <ImageView
                android:id="@+id/email_address_label"
                style="@style/detail_icon"
                android:background="@drawable/ic_email"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@id/email_wrapper"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/email_wrapper" />
        </android.support.constraint.ConstraintLayout>


        <!--Address-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/address_container"
            style="@style/containerPink"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contact_details_container">

            <!--Address Line 1-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/address_line_1_wrapper"
                style="@style/text_input_wrapper"
                android:layout_marginLeft="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:theme="@style/TextLabelPink">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/address_line_1"
                    style="@style/text_field_full"
                    android:hint="Address Line 1"
                    android:inputType="textCapWords|textPostalAddress" />
            </android.support.design.widget.TextInputLayout>

            <!--Address Icon-->
            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_address"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/address_line_1_wrapper"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/address_line_1_wrapper" />

            <!--Address Line 2-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/address_line_2_wrapper"
                style="@style/text_input_wrapper"
                app:layout_constraintLeft_toLeftOf="@id/address_line_1_wrapper"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_line_1_wrapper"
                android:theme="@style/TextLabelPink">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/address_line_2"
                    style="@style/text_field_full"
                    android:hint="Address Line 2"
                    android:inputType="textCapWords|textPostalAddress" />
            </android.support.design.widget.TextInputLayout>

            <!--Address Town-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/town_wrapper"
                style="@style/text_input_wrapper"
                app:layout_constraintLeft_toLeftOf="@id/address_line_1_wrapper"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_line_2_wrapper"
                android:theme="@style/TextLabelPink">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/town"
                    style="@style/text_field_full"
                    android:hint="Town"
                    android:inputType="textCapWords|textPostalAddress" />
            </android.support.design.widget.TextInputLayout>

            <!--Address City-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/city_wrapper"
                style="@style/text_input_wrapper"
                app:layout_constraintLeft_toLeftOf="@id/address_line_1_wrapper"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/town_wrapper"
                android:theme="@style/TextLabelPink">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/city"
                    style="@style/text_field_full"
                    android:hint="City"
                    android:inputType="textCapWords|textPostalAddress" />
            </android.support.design.widget.TextInputLayout>

            <!--Address PostCode-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/postcode_wrapper"
                style="@style/text_input_wrapper"
                app:layout_constraintLeft_toLeftOf="@id/address_line_1_wrapper"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/city_wrapper"
                android:theme="@style/TextLabelPink">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/postcode"
                    style="@style/text_field_full"
                    android:hint="Postcode"
                    android:inputType="textCapCharacters|textPostalAddress" />
            </android.support.design.widget.TextInputLayout>
        </android.support.constraint.ConstraintLayout>

        <!--Notes-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/notes_container"
            style="@style/containerGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_container">

            <!--Notes-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/notes_wrapper"
                style="@style/text_input_wrapper"
                android:layout_marginLeft="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:theme="@style/TextLabelGrey">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/notes"
                    style="@style/text_field_full"
                    android:hint="Notes"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <!--Notes Icon-->
            <ImageView
                android:id="@+id/notes_label"
                style="@style/detail_icon"
                android:background="@drawable/ic_notes"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@id/notes_wrapper"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/notes_wrapper" />

        </android.support.constraint.ConstraintLayout>

        <!--Submit Button-->
        <Button
            android:id="@+id/btn_submit"
            style="@style/button"
            android:text="@string/submit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notes_container" />

        <!--Populate Button - For Testing-->
        <!--<Button-->
        <!--android:id="@+id/btn_populate"-->
        <!--style="@style/button"-->
        <!--android:text="Populate"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@id/btn_submit" />-->

    </android.support.constraint.ConstraintLayout>
</ScrollView>