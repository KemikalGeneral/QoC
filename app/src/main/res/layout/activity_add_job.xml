<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_job_page_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.endorphinapps.kemikal.queenofclean.AddRecords.AddJob">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <!--Customer Section-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/customer_container"
            style="@style/containerPink"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Customer Placeholder-->
            <TextView
                android:id="@+id/dummy_customer"
                style="@style/text_field_wrap"
                android:layout_marginLeft="40dp"
                android:padding="@dimen/padding_16"
                android:text="Select a Customer..."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--One-Off Customer Button-->
            <Button
                android:id="@+id/button_one_off_customer"
                style="@style/text_field_wrap"
                android:layout_marginLeft="40dp"
                android:background="@drawable/pink_rounded_container"
                android:padding="@dimen/padding_8"
                android:text="One-off\nJob"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Person Icon-->
            <ImageView
                android:id="@+id/icon_dummy_customer"
                style="@style/detail_icon"
                android:background="@drawable/ic_person"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/dummy_customer"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/dummy_customer" />

            <!--Customer-->
            <Spinner
                android:id="@+id/customer_spinner"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:padding="0dp"
                app:layout_constraintLeft_toLeftOf="@id/dummy_customer"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Person Icon-->
            <ImageView
                android:id="@+id/icon_customer_spinner"
                style="@style/detail_icon"
                android:background="@drawable/ic_person"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/customer_spinner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/customer_spinner" />

            <!--Customer's Address Details-->
            <android.support.constraint.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/customer_address_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/customer_spinner">

                <!--Address Line 1-->
                <TextView
                    android:id="@+id/address_line_1"
                    style="@style/text_field_full"
                    android:layout_marginLeft="40dp"
                    android:text="@string/address_line_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--Address Icon-->
                <ImageView
                    style="@style/detail_icon"
                    android:background="@drawable/ic_address"
                    android:backgroundTint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/address_line_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/address_line_1" />

                <!--Address Line 2-->
                <TextView
                    android:id="@+id/address_line_2"
                    style="@style/text_field_full"
                    android:layout_width="wrap_content"
                    android:text="@string/address_line_2"
                    app:layout_constraintLeft_toLeftOf="@id/address_line_1"
                    app:layout_constraintTop_toBottomOf="@id/address_line_1" />

                <!--Town-->
                <TextView
                    android:id="@+id/address_town"
                    style="@style/text_field_full"
                    android:layout_width="wrap_content"
                    android:text="@string/town"
                    app:layout_constraintLeft_toLeftOf="@id/address_line_1"
                    app:layout_constraintTop_toBottomOf="@id/address_line_2" />

                <!--City-->
                <TextView
                    android:id="@+id/address_city"
                    style="@style/text_field_full"
                    android:layout_width="wrap_content"
                    android:text="@string/city"
                    app:layout_constraintLeft_toLeftOf="@id/address_line_1"
                    app:layout_constraintTop_toBottomOf="@id/address_town" />

                <!--Postcode-->
                <TextView
                    android:id="@+id/address_postcode"
                    style="@style/text_field_full"
                    android:layout_width="wrap_content"
                    android:text="@string/postcode"
                    app:layout_constraintLeft_toLeftOf="@id/address_line_1"
                    app:layout_constraintTop_toBottomOf="@id/address_city" />
            </android.support.constraint.ConstraintLayout>

            <!--One-Off Job Details-->
            <android.support.constraint.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/one_off_customer_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!--One-off First Name-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/one_off_first_name_wrapper"
                    style="@style/text_input_wrapper"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:theme="@style/TextLabelPink">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/one_off_first_name"
                        style="@style/text_field_full"
                        android:hint="First name"
                        android:inputType="textCapWords|textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <!--Person Icon-->
                <ImageView
                    style="@style/detail_icon"
                    android:background="@drawable/ic_person"
                    android:backgroundTint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/one_off_first_name_wrapper"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/one_off_first_name_wrapper" />

                <!--One-off Last Name-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/one_off_last_name_wrapper"
                    style="@style/text_input_wrapper"
                    app:layout_constraintLeft_toLeftOf="@id/one_off_first_name_wrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/one_off_first_name_wrapper"
                    android:theme="@style/TextLabelPink">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/one_off_last_name"
                        style="@style/text_field_full"
                        android:hint="Last name"
                        android:inputType="textCapWords|textPersonName" />
                </android.support.design.widget.TextInputLayout>

                <!--One-off Home Number-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/one_off_home_number_wrapper"
                    style="@style/text_input_wrapper"
                    app:layout_constraintLeft_toLeftOf="@id/one_off_first_name_wrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/one_off_last_name_wrapper"
                    android:theme="@style/TextLabelPink">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/one_off_home_number"
                        style="@style/text_field_full"
                        android:hint="Home number"
                        android:inputType="phone" />
                </android.support.design.widget.TextInputLayout>

                <!--Home Phone Icon-->
                <ImageView
                    style="@style/detail_icon"
                    android:background="@drawable/ic_phone_home"
                    android:backgroundTint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/one_off_home_number_wrapper"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/one_off_home_number_wrapper" />

                <!--One-off Mobile Number-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/one_off_mobile_number_wrapper"
                    style="@style/text_input_wrapper"
                    app:layout_constraintLeft_toLeftOf="@id/one_off_first_name_wrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/one_off_home_number_wrapper"
                    android:theme="@style/TextLabelPink">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/one_off_mobile_number"
                        style="@style/text_field_full"
                        android:hint="Mobile number"
                        android:inputType="phone" />
                </android.support.design.widget.TextInputLayout>

                <!--Mobile Phone Icon-->
                <ImageView
                    style="@style/detail_icon"
                    android:background="@drawable/ic_phone_mobile"
                    android:backgroundTint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/one_off_mobile_number_wrapper"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/one_off_mobile_number_wrapper" />

                <!--One-off Address Line 1-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/one_off_address_line_1_wrapper"
                    style="@style/text_input_wrapper"
                    app:layout_constraintLeft_toLeftOf="@id/one_off_first_name_wrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/one_off_mobile_number_wrapper"
                    android:theme="@style/TextLabelPink">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/one_off_address_line_1"
                        style="@style/text_field_full"
                        android:hint="Address line 1"
                        android:inputType="textCapWords|textPostalAddress" />
                </android.support.design.widget.TextInputLayout>

                <!--Address Icon-->
                <ImageView
                    style="@style/detail_icon"
                    android:background="@drawable/ic_address"
                    android:backgroundTint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/one_off_address_line_1_wrapper"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/one_off_address_line_1_wrapper" />

                <!--One-off Address Line 2-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/one_off_address_line_2_wrapper"
                    style="@style/text_input_wrapper"
                    app:layout_constraintLeft_toLeftOf="@id/one_off_first_name_wrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/one_off_address_line_1_wrapper"
                    android:theme="@style/TextLabelPink">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/one_off_address_line_2"
                        style="@style/text_field_full"
                        android:hint="Address line 2"
                        android:inputType="textCapWords|textPostalAddress" />
                </android.support.design.widget.TextInputLayout>

                <!--One-off Address Town-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/one_off_address_town_wrapper"
                    style="@style/text_input_wrapper"
                    app:layout_constraintLeft_toLeftOf="@id/one_off_first_name_wrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/one_off_address_line_2_wrapper"
                    android:theme="@style/TextLabelPink">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/one_off_address_town"
                        style="@style/text_field_full"
                        android:hint="Town"
                        android:inputType="textCapWords|textPostalAddress" />
                </android.support.design.widget.TextInputLayout>

                <!--One-off Address City-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/one_off_address_city_wrapper"
                    style="@style/text_input_wrapper"
                    app:layout_constraintLeft_toLeftOf="@id/one_off_first_name_wrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/one_off_address_town_wrapper"
                    android:theme="@style/TextLabelPink">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/one_off_address_city"
                        style="@style/text_field_full"
                        android:hint="City"
                        android:inputType="textCapWords|textPostalAddress" />
                </android.support.design.widget.TextInputLayout>

                <!--One-off Address Postcode-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/one_off_address_postcode_wrapper"
                    style="@style/text_input_wrapper"
                    app:layout_constraintLeft_toLeftOf="@id/one_off_first_name_wrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/one_off_address_city_wrapper"
                    android:theme="@style/TextLabelPink">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/one_off_address_postcode"
                        style="@style/text_field_full"
                        android:hint="Postcode"
                        android:inputType="textPostalAddress"
                        android:textAllCaps="true" />
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>


        <!--Employee Section-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/employee_container"
            style="@style/containerGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customer_container">

            <TextView
                android:id="@+id/dummy_employee"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:text="Select an Employee..."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_dummy_employee"
                style="@style/detail_icon"
                android:background="@drawable/ic_person"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@id/dummy_employee"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/dummy_employee" />

            <Spinner
                android:id="@+id/employee_spinner"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:padding="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_employee_spinner"
                style="@style/detail_icon"
                android:background="@drawable/ic_person"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@id/employee_spinner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/employee_spinner" />
        </android.support.constraint.ConstraintLayout>


        <!--Date-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/date_time_container"
            style="@style/containerPink"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/employee_container">

            <TextView
                android:id="@+id/start_date"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:text="Select a Start Date..."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_date"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/start_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/start_date" />

            <TextView
                android:id="@+id/start_time"
                style="@style/text_field_full"
                android:layout_marginLeft="40dp"
                android:text="Select a Start Time..."
                app:layout_constraintLeft_toLeftOf="@id/start_date"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/start_date" />

            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_time"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/start_time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/start_time" />
        </android.support.constraint.ConstraintLayout>


        <!--Job & Payment Statuses-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/status_container"
            style="@style/containerGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_time_container">

            <!--Job Status Label-->
            <TextView
                android:id="@+id/job_status_spinner_label"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:text="Job Status:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Job Status-->
            <Spinner
                android:id="@+id/job_status_spinner"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:padding="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Customer Payment Status Label-->
            <TextView
                android:id="@+id/customer_payment_status_spinner_label"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:text="Customer Paid:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/job_status_spinner_label" />

            <!--Customer Payment Status-->
            <Spinner
                android:id="@+id/customer_payment_status_spinner"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:padding="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/job_status_spinner" />

            <!--Employee Payment Status Label-->
            <TextView
                android:id="@+id/employee_payment_status_spinner_label"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:text="Employee Paid:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/customer_payment_status_spinner_label" />

            <!--Employee Payment Status-->
            <Spinner
                android:id="@+id/employee_payment_status_spinner"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:padding="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/customer_payment_status_spinner" />
        </android.support.constraint.ConstraintLayout>


        <!--Job Items-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/job_items_container"
            style="@style/containerPink"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status_container">

            <TextView
                android:id="@+id/job_item_row"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:hint="Click to Add a Task..."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_add"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/job_item_row"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/job_item_row" />

            <LinearLayout
                android:id="@+id/job_list_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/job_item_row" />
        </android.support.constraint.ConstraintLayout>


        <!--Estimated Time-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/estimated_time_container"
            style="@style/containerGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/job_items_container">

            <TextView
                android:id="@+id/estimated_time_icon"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Length of Job in Hours:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Time Icon-->
            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_time"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@id/estimated_time_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/estimated_time_icon" />

            <EditText
                android:id="@+id/estimated_time"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:hint="0.0"
                android:inputType="numberDecimal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>


        <!--Total Job Price-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/total_price_container"
            style="@style/containerPink"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/estimated_time_container">

            <TextView
                android:id="@+id/money_icon"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Total Price for Job:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Money Icon-->
            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_money"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/money_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/money_icon" />

            <TextView
                android:id="@+id/total_price"
                style="@style/text_field_full"
                android:layout_width="wrap_content"
                android:hint="£0.00"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>


        <!--Notes-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/notes_container"
            style="@style/containerGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_price_container">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/notes_wrapper"
                style="@style/text_input_wrapper"
                android:layout_marginLeft="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/notes"
                    style="@style/text_field_full"
                    android:gravity="top"
                    android:hint="Add Notes..."
                    android:inputType="textCapSentences"
                    android:lines="5" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                style="@style/detail_icon"
                android:background="@drawable/ic_notes"
                android:backgroundTint="@color/colorAccent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/notes_wrapper" />
        </android.support.constraint.ConstraintLayout>


        <!--Submit-->
        <Button
            android:id="@+id/add_Job_btn_submit"
            style="@style/button"
            android:text="@string/submit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notes_container" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
